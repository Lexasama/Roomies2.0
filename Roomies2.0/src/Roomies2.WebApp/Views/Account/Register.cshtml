@model Roomies2.WebApp.Models.AccountViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Créer un nouveau compte";
}

<div class="container">
    <h2 class="my-4">@ViewData["Title"]</h2>

    <form asp-controller="Account" asp-action="Register" method="post">
        @if (!ViewContext.ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
        }


        <div class="from-group">
            <label asp-for="Sex">Vous êtes : </label> &nbsp;&nbsp;
            Homme <input type="radio" name="gender" value="0"/> &nbsp;
            Femme <input type="radio" name="gender" value="1"/> &nbsp;
            Autre <input type="radio" name="gender" value="2"/> &nbsp;
        </div>

        <div class="form-group">
            <label asp-for="Email">E-mail : </label>
            <input asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserName">Username : </label>
            <input asp-for="UserName" class="form-control"/>
            <span asp-validation-for="UserName"></span>
        </div>

        <div class="from-group">
            <label asp-for="FirstName">Prénom : </label>
            <input asp-for="FirstName" class="form-control"/>
            <span asp-validation-for="FirstName"></span>

            <label asp-for="LastName">Nom : </label>
            <input asp-for="LastName" class="form-control"/>
            <span asp-validation-for="LastName"></span>
        </div>

        <div class="form-group">
            <label asp-for="BirthDate">Date de naissance : </label>
            <input asp-for="BirthDate" class="form-control"/>
            <span asp-validation-for="BirthDate"></span>
        </div>

        <div class="form-group">
            <label asp-for="Phone">Téléphone : </label>
            <input asp-for="Phone" class="form-control"/>
            <span asp-validation-for="Phone"></span>
        </div>


        <div class="form-group">
            <label asp-for="Password">Mot de passe : </label>
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword">Répétez le mot de passe : </label>
            <input asp-for="ConfirmPassword" class="form-control"/>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-block">S'enregistrer</button>
    </form>
</div>