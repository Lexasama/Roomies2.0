@using Roomies2.WebApp.Services
@{
    var spaHost = (string) ViewData["SpaHost"];
    var token = (Token) ViewData["Token"];
    var email = (string) ViewData["Email"];
    var breachPadding = (string) ViewData["BreachPadding"];
    var providers = (IEnumerable<string>) ViewData["Providers"];
    string providerNames = string.Join(",", providers.Select(p => string.Format("'{0}'", p)));
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Authenticated</title>
</head>
<body>
<script>
        (function () {
            window.opener.postMessage({
                type: 'authenticated',
                payload: {
                    bearer: {
                        accessToken: '@token.AccessToken',
                        expires_in: @token.ExpiresIn
                    },
                    email: '@email',
                    boundProviders: [@Html.Raw(providerNames)]
                }
            }, '@spaHost');

            window.close();
        })();
    </script>
<!-- @breachPadding -->
</body>
</html>